<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddIncome">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="New Income"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="Category"
                android:textColor="@color/gray_700" />

            <Spinner
                android:id="@+id/categorySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:background="@drawable/spinner_layer_list"
                android:dropDownWidth="match_parent"
                android:minHeight="48dp"
                android:paddingStart="20dp"
                android:scrollbars="vertical"
                android:spinnerMode="dialog"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_400"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="Date"
                android:textColor="@color/gray_700" />

            <EditText
                android:id="@+id/editTextDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:background="@drawable/edittext_rounded_border"
                android:clickable="true"
                android:ems="10"
                android:focusable="false"
                android:hint="Select Received Date"
                android:inputType="date"
                android:minHeight="48dp"
                android:paddingStart="20dp"
                android:textColor="@color/text_box_font_theam"
                android:textColorHint="@color/gray_400"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="Amount"
                android:textColor="@color/gray_700" />

            <EditText
                android:id="@+id/expenseAmountEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:alpha="0.8"
                android:background="@drawable/edittext_rounded_border"
                android:hint="Income Amount"
                android:inputType="numberDecimal"
                android:minHeight="48dp"
                android:paddingStart="20dp"
                android:textColor="@color/text_box_font_theam"
                android:textColorHint="@color/gray_400"
                android:textSize="16sp" />

            <Button
                android:id="@+id/saveExpenseButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginVertical="10dp"
                android:background="@drawable/default_theam_button"
                android:elevation="10dp"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>