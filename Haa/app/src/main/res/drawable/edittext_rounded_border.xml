<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/text_box_bg_theam" /> <!-- Background color -->
            <corners android:radius="20dp" /> <!-- Rounded corners -->
            <stroke android:width="1dp" android:color="@color/gray_200" /> <!-- Border color and width -->

        </shape>

    </item>
    <item android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/text_box_bg_theam" /> <!-- Background color -->
            <corners android:radius="20dp" /> <!-- Rounded corners -->
            <stroke android:width="1dp" android:color="@color/box_focus_theam" /> <!-- Border color and width -->

        </shape>
    </item>
</selector>
